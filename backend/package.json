{
  "name": "chat-backend",
  "version": "1.0.0",
  "description": "Chat application backend",
  "main": "server.js",
  "scripts": {
    "schema:generate": "prisma generate --schema=prisma/schema",
    "postinstall": "npm run schema:generate",
    "prestart": "npx -y kill-port 3010 || exit 0",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testTimeout=30000",
    "test:performance": "jest --testPathPattern=performance.test.js --testTimeout=60000",
    "test:integration": "jest --testPathPattern=integration --testTimeout=45000",
    "test:learning": "jest --testPathPattern=continuous-learning --testTimeout=30000",
    "security:isolation": "bash scripts/check-isolation.sh",
    "security:isolation-simple": "powershell -ExecutionPolicy Bypass -File scripts/check-isolation-simple.ps1",
    "security:isolation-basic": "node scripts/check-isolation-basic.js",
    "security:isolation-deep": "node scripts/deep-isolation-check.js",
    "security:isolation-summary": "node scripts/show-isolation-summary.js",
    "security:deep-summary": "node scripts/show-deep-analysis.js",
    "security:comprehensive": "node scripts/run-all-security-checks.js",
    "security:fix-critical": "node scripts/fix-critical-issues.js",
    "security:install": "pip install semgrep",
    "security:quick": "semgrep --config=.semgrep/isolation-rules.yml src/",
    "test:analyze": "node scripts/analyzeAndFixAITest.js",
    "test:analyze-fix": "node scripts/analyzeAndFixAITest.js",
    "test:quick-analyze": "node scripts/quickAnalyze.js",
    "test:run-and-analyze": "node scripts/runTestAndAnalyze.js",
    "test:run": "node scripts/runTestDirect.js",
    "test:reviews": "node test-reviews-page.js",
    "whatsapp:update": "node run-prisma-update.js",
    "setup:production": "node scripts/setup_production.js",
    "fix:roles": "node scripts/fix_production_roles.js",
    "fix:xp": "node scripts/backfill_completed_tasks_xp.js",
    "fix:xp-recalc": "node scripts/recalculate_xp.js",
    "fix:levels": "node scripts/fix_leaderboard_levels.js",
    "sync:prod": "node scripts/sync_prod_rules.js",
    "check:rewards": "node scripts/check_reward_table.js",
    "create:rewards-table": "node scripts/create_reward_tables.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@hapi/boom": "^10.0.1",
    "@huggingface/inference": "^4.13.5",
    "@prisma/client": "^6.12.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@whiskeysockets/baileys": "^6.7.21",
    "array-flatten": "^3.0.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.66.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "facebook-nodejs-business-sdk": "^22.0.0",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "html-pdf-node": "^1.0.8",
    "input": "^1.0.1",
    "ioredis": "^5.8.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.6.0",
    "mongoose": "^9.0.1",
    "multer": "^2.0.2",
    "mysql2": "^3.16.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.5",
    "path": "^0.12.7",
    "pdfkit": "^0.17.2",
    "pg": "^8.17.2",
    "pino": "^9.14.0",
    "prisma": "^6.12.0",
    "puppeteer": "^24.36.1",
    "qrcode-terminal": "^0.12.0",
    "redis-server": "^1.2.2",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "telegraf": "^4.16.3",
    "telegram": "^2.26.22",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^6.12.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}