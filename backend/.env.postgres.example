# ============================================
# مثال لإعدادات PostgreSQL
# ============================================



POSTGRES_URL="postgresql://appuser:your_password@localhost:5432/maxp"

# ============================================
# خطوات الإعداد في PostgreSQL:
# ============================================

# 1. اتصل بـ PostgreSQL كـ superuser
# psql -U postgres

# 2. أنشئ قاعدة البيانات
# CREATE DATABASE maxp;

# 3. أنشئ المستخدم
# CREATE USER appuser WITH PASSWORD 'your_password';

# 4. امنح الصلاحيات
# GRANT ALL PRIVILEGES ON DATABASE maxp TO appuser;

# 5. اتصل بقاعدة البيانات
# \c maxp

# 6. ثبت pgvector extension
# CREATE EXTENSION vector;

# 7. امنح صلاحيات على الـ schema
# GRANT ALL ON SCHEMA public TO appuser;

# ============================================
# للاتصال من سيرفر بعيد:
# ============================================

# إذا كان PostgreSQL على سيرفر آخر، استخدم:
# POSTGRES_URL="postgresql://appuser:your_password@192.168.1.100:5432/maxp"

# أو إذا كان يحتاج SSL:
# POSTGRES_URL="postgresql://appuser:your_password@hostname:5432/maxp?sslmode=require"
